<?xml version="1.0" encoding="utf-8"?>
<!-- only use one PreferenceScreen tag b/c no need for nested hierarchy in this simple and small app -->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="@string/pref_popular_label"
        android:entries="@array/pref_sort_option_labels"
        android:entryValues="@array/pref_sort_option_values"
        android:key="@string/pref_sort_key"
        android:title="@string/pref_sort_label" />

</PreferenceScreen>